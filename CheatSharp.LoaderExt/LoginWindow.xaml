<mah:MetroWindow x:Class="CheatSharp.LoaderExt.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:CheatSharp.LoaderExt"
        mc:Ignorable="d"
        Title="Cheat# Login - Closed Alpha" Height="300" Width="400"
        TitleCharacterCasing="Normal" ResizeMode="CanMinimize">
    <Grid Background="#FF1E1E1E">
        <Label Content="Username" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Stretch" Height="23" Margin="0,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="372" mah:TextBoxHelper.Watermark="Username"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <PasswordBox HorizontalAlignment="Stretch" Height="23" Margin="0,103,0,0" VerticalAlignment="Top" Width="372" mah:TextBoxHelper.Watermark="Password"/>
        <Button Content="Login" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="140" Margin="0,30" Height="40"/>

    </Grid>
</mah:MetroWindow>
